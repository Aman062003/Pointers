---------------------------------------------HEAP Flowchart-------------------------------------------
#include<iostream>
using namespace std;
int main(){
int a = 10;                  //stored in stack
int *p = new int();             //allocate memory in heap
*p = 10;
delete(p);                  //deallocate memory
p = new int[4];
delete[]p;
p=NULL;
return 0;
}
-----------------------------------------------STACK Flowchart------------------------------------------
#include<iostream>
using namespace std;
int add(int num1,int num2){
return num1 + num2;
}
int main(){
int a=2;
int b=3;
int sum = add(a,b)
count<<sum<<endl;
return 0;
}
